<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <hr />

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td>
                          <a href="/items?category={{this.id}}">
                                {{this.id}}
                            </a>
                        </td>
                        <td>
                            <a href="/items?category={{this.category}}">
                                {{this.category}}
                            </a>
                        </td>
                        <td>{{this.published}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Conditionally display the error message if there are no items -->
    {{#unless items}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>
